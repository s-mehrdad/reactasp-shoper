@page
@model razorasp_shoper.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<table class="table-bordered">
    <thead>Products</thead>
    <tbody>
        <tr>
            <th>@Html.DisplayNameFor(model=> model.filteredProducts.First().Name)</th>
            <th>@Html.DisplayNameFor(model=> model.filteredProducts[0].Model)</th>
            <th>@Html.DisplayNameFor(model=> model.filteredProducts[0].Description)</th>
            <th>@Html.DisplayNameFor(model=> model.filteredProducts[0].Category)</th>
            <th>@Html.DisplayNameFor(model=> model.filteredProducts[0].Image)</th>
        </tr>
        <br />
        <form>
            <label for="searchField" title="search">
                Search For:
                <input tabindex="1" name="searchField" type="text" asp-for="searchField" placeholder="shoƥer..." />
                <input tabindex="-1" type="submit" value="Filter" />
            </label>
            <label for="categoryField" title="category">
                <br />
                Category:
                <select name="categoryField" asp-for="categoryField" asp-items="Model.categoryList" onload="">
                    <option selected>Select Category</option>
                </select>
            </label>
        </form>
        @foreach (var item in Model.filteredProducts)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>@item.Model</td>
                <td>@item.Description</td>
                <td>@item.Category</td>
                <td>
                    <img src="@item.Image" alt="ProductImage" />
                </td>
            </tr>

        }
    </tbody>


</table>
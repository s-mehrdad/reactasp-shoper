@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="text-start">

        <h4 class="border-2 bg-light">Todo List</h4>
        <form asp-controller="Home" asp-action="Index" method="get">
            <p>
                <input type="text" name="searchField" placeholder="search for" />
                <input type="submit" value="Filter" />
            </p>
        </form>
        <ui>
            @foreach (var item in Model)
            {
                <li id="@item.Id">@Html.DisplayFor(modelItem => item.Name)<span> : so far do and do</span></li>
            }
            @* @for (int i = 0; i < (int) ViewData["soMany"]; i++)
            {
            } *@
        </ui>
        <p>don't forget to remember life is life and love is love after each todo :\</p>
    </div>
</div>
